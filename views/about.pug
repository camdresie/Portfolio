  script.
    // Ensure tabs work on this page
    document.addEventListener('DOMContentLoaded', function() {
      console.log('About page script loaded');
      
      // Make all timeline items visible immediately
      const timelineItems = document.querySelectorAll('.timeline-item');
      timelineItems.forEach((item, index) => {
        setTimeout(() => {
          item.classList.add('visible');
        }, index * 100);
      });
      
      // Handle tab switching
      const tabs = document.querySelectorAll('.portfolio-tab');
      tabs.forEach(tab => {
        tab.addEventListener('click', function(e) {
          e.preventDefault();
          
          // Get tab name
          const tabName = this.getAttribute('data-tab');
          console.log('Tab clicked:', tabName);
          
          // Update active tab
          tabs.forEach(t => t.classList.remove('active'));
          this.classList.add('active');
          
          // Hide all content sections
          const contents = document.querySelectorAll('.portfolio-content');
          contents.forEach(content => {
            content.style.display = 'none';
          });
          
          // Show the selected content section
          const targetContent = document.querySelector(`.portfolio-content[data-content="${tabName}"]`);
          if (targetContent) {
            targetContent.style.display = 'block';
          }
        });
      });
      
      // Apply direct styling to ensure timeline works correctly
      const inlineStyles = `
        .about-heading {
          margin-bottom: 0.5rem;
          font-weight: 600;
          color: #fff;
          letter-spacing: 0.5px;
        }
        
        .about-subtitle {
          margin-bottom: 2rem;
          opacity: 0.8;
        }
      
        .portfolio-content[data-content="timeline"] .timeline-container {
          max-height: 70vh;
          overflow-y: auto;
          padding: 20px;
          margin: 0 auto;
          max-width: 900px;
          scrollbar-width: thin;
          scrollbar-color: rgba(0, 166, 255, 0.5) rgba(255, 255, 255, 0.05);
        }
        
        .portfolio-content[data-content="timeline"] .timeline-container::-webkit-scrollbar {
          width: 6px;
        }
        
        .portfolio-content[data-content="timeline"] .timeline-container::-webkit-scrollbar-track {
          background: rgba(255, 255, 255, 0.05);
          border-radius: 3px;
        }
        
        .portfolio-content[data-content="timeline"] .timeline-container::-webkit-scrollbar-thumb {
          background-color: rgba(0, 166, 255, 0.5);
          border-radius: 3px;
        }
        
        .portfolio-content[data-content="timeline"] .timeline {
          position: relative;
          max-width: 800px;
          margin: 0 auto;
        }
        
        .portfolio-content[data-content="timeline"] .timeline::after {
          content: '';
          position: absolute;
          width: 2px;
          background: linear-gradient(to bottom, 
            #00a6ff,
            #00a6ff,
            rgba(255, 255, 255, 0.05));
          top: 0;
          bottom: 0;
          left: 50%;
          transform: translateX(-50%);
          border-radius: 1px;
          z-index: 0;
        }
        
        .portfolio-content[data-content="timeline"] .timeline-item {
          padding: 10px 40px;
          position: relative;
          width: 50%;
          opacity: 0;
          transform: translateY(20px);
          transition: all 0.5s ease;
          margin-bottom: 30px;
        }
        
        .portfolio-content[data-content="timeline"] .timeline-item.visible {
          opacity: 1;
          transform: translateY(0);
        }
        
        .portfolio-content[data-content="timeline"] .timeline-item:nth-child(odd) {
          left: 0;
        }
        
        .portfolio-content[data-content="timeline"] .timeline-item:nth-child(even) {
          left: 50%;
        }
        
        .portfolio-content[data-content="timeline"] .timeline-dot {
          position: absolute;
          width: 16px;
          height: 16px;
          background: #00a6ff;
          border-radius: 50%;
          top: 20px;
          z-index: 2;
          box-shadow: 0 0 10px #00a6ff;
          transform: translateX(-50%);
        }
        
        .portfolio-content[data-content="timeline"] .timeline-item:nth-child(odd) .timeline-dot {
          left: 100%;
          right: auto;
        }
        
        .portfolio-content[data-content="timeline"] .timeline-item:nth-child(even) .timeline-dot {
          left: 0%;
          right: auto;
        }
        
        .portfolio-content[data-content="timeline"] .timeline-date {
          position: absolute;
          width: 100px;
          font-size: 0.85rem;
          color: #00a6ff;
          top: 18px;
          font-weight: 600;
          letter-spacing: 1px;
        }
        
        .portfolio-content[data-content="timeline"] .timeline-item:nth-child(odd) .timeline-date {
          right: -140px;
          left: auto;
          text-align: left;
        }
        
        .portfolio-content[data-content="timeline"] .timeline-item:nth-child(even) .timeline-date {
          left: -140px;
          right: auto;
          text-align: right;
        }
        
        .portfolio-content[data-content="timeline"] .timeline-content {
          padding: 20px;
          background: rgba(255, 255, 255, 0.03);
          border-radius: 8px;
          box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
          border: 1px solid rgba(255, 255, 255, 0.05);
          transition: all 0.3s ease;
          position: relative;
          overflow: hidden;
        }
        
        /* Explicitly remove any triangles */
        .portfolio-content[data-content="timeline"] .timeline-content::before,
        .portfolio-content[data-content="timeline"] .timeline-content::after {
          display: none !important;
        }
        
        .portfolio-content[data-content="timeline"] .timeline-content h4 {
          margin: 0 0 5px 0;
          color: #fff;
          font-size: 1.2rem;
          font-weight: 600;
        }
        
        .portfolio-content[data-content="timeline"] .timeline-content h5 {
          margin: 0 0 15px 0;
          color: rgba(255, 255, 255, 0.7);
          font-size: 1rem;
          font-weight: 500;
        }
        
        .portfolio-content[data-content="timeline"] .timeline-content p {
          margin: 0 0 15px 0;
          color: rgba(255, 255, 255, 0.8);
          font-size: 0.95rem;
          line-height: 1.6;
        }
        
        .portfolio-content[data-content="timeline"] .timeline-skills {
          display: flex;
          flex-wrap: wrap;
          gap: 8px;
        }
        
        .portfolio-content[data-content="timeline"] .timeline-skill {
          background: rgba(0, 166, 255, 0.1);
          color: rgba(255, 255, 255, 0.9);
          padding: 4px 10px;
          border-radius: 4px;
          font-size: 0.8rem;
          font-weight: 500;
          border: 1px solid rgba(0, 166, 255, 0.2);
        }
        
        /* Add hover effect for timeline dots */
        .portfolio-content[data-content="timeline"] .timeline-item:hover .timeline-dot {
          transform: translateX(-50%);
          box-shadow: 0 0 10px #00a6ff;
        }
        
        /* Add hover effect for timeline content */
        .portfolio-content[data-content="timeline"] .timeline-item:hover .timeline-content {
          transform: translateY(-5px);
          box-shadow: 0 0 20px rgba(0, 166, 255, 0.2), 0 0 30px rgba(0, 136, 204, 0.1);
          background: rgba(255, 255, 255, 0.05);
          border: 1px solid rgba(0, 166, 255, 0.3);
          transition: all 0.3s ease;
        }
        
        /* Bio page styling */
        .portfolio-bio {
          background: rgba(255, 255, 255, 0.03);
          border-radius: 8px;
          padding: 25px;
          box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
          border: 1px solid rgba(255, 255, 255, 0.05);
          margin-bottom: 20px;
        }
        
        .portfolio-bio p {
          margin-bottom: 1.5rem;
          line-height: 1.7;
          color: rgba(255, 255, 255, 0.85);
        }
        
        .portfolio-bio p:last-child {
          margin-bottom: 0;
        }
        
        .skills-container {
          background: rgba(255, 255, 255, 0.03);
          border-radius: 8px;
          padding: 25px;
          box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
          border: 1px solid rgba(255, 255, 255, 0.05);
        }
        
        .skills-container h6 {
          margin-bottom: 15px;
          font-weight: 600;
          color: #fff;
          letter-spacing: 0.5px;
        }
        
        .skills-grid {
          display: flex;
          flex-wrap: wrap;
          gap: 10px;
        }
        
        .skill-tag {
          background: rgba(0, 166, 255, 0.1);
          color: rgba(255, 255, 255, 0.9);
          padding: 6px 12px;
          border-radius: 4px;
          font-size: 0.85rem;
          font-weight: 500;
          border: 1px solid rgba(0, 166, 255, 0.2);
          transition: all 0.3s ease;
        }
        
        .skill-tag:hover {
          background: rgba(0, 166, 255, 0.2);
          transform: translateY(-2px);
          box-shadow: 0 3px 10px rgba(0, 166, 255, 0.15);
        }
        
        /* Mobile view for timeline */
        @media (max-width: 768px) {
          .portfolio-content[data-content="timeline"] .timeline-item {
            width: 100%;
            padding-left: 70px;
            padding-right: 25px;
          }
          
          .portfolio-content[data-content="timeline"] .timeline-item:nth-child(even) {
            left: 0;
          }
          
          .portfolio-content[data-content="timeline"] .timeline::after {
            left: 40px;
          }
          
          .portfolio-content[data-content="timeline"] .timeline-dot {
            left: 40px !important;
            right: auto !important;
          }
          
          .portfolio-content[data-content="timeline"] .timeline-date {
            position: relative;
            width: 100%;
            left: auto !important;
            right: auto !important;
            top: -5px;
            margin-bottom: 5px;
            text-align: left !important;
          }
          
          .portfolio-content[data-content="timeline"] .timeline-content {
            padding: 15px;
          }
        }
      `;
      
      const styleElement = document.createElement('style');
      styleElement.textContent = inlineStyles;
      document.head.appendChild(styleElement);
    });
  